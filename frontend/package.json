{
    "name": "web-base-project",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "npm run generate && craco start",
        "build": "craco build",
        "eject": "craco eject",
        "generate": "npm run generate:openapi && npm run generate:icons && npm run generate:images",
        "generate:icons": "node ./src/script/iconGenerator.js ./src/asset/icon/ ./src/module/common/icons/ && prettier --write ./src/module/common/icons/",
        "generate:images": "node ./src/script/imagesGenerator.js ./src/asset/image/ && prettier --write ./src/asset/image/",
        "generate:openapi": "openapi -i ../backend/openapi-spec.json -o src/module/api/service --exportSchemas=true --useUnionTypes",
        "test": "jest --coverage",
        "test:unit": "jest --coverage",
        "start:e2e": "BROWSER=none craco -r @cypress/instrument-cra start",
        "test:e2e": "start-test start:e2e 3000 test:e2e:run && yarn test:e2e:coverage",
        "test:e2e:run": "cypress run",
        "test:e2e:open": "start-test start:e2e 3000 test:e2e:cypress-open",
        "test:e2e:cypress-open": "cypress open",
        "test:e2e:coverage": "cp -f coverage/coverage-final.json .nyc_output && nyc report --check-coverage --lines 75",
        "cy:install": "cypress install --force"
    },
    "dependencies": {
        "@craco/craco": "^6.1.2",
        "@peersyst/react-components": "^2.3.1",
        "@peersyst/react-hooks": "^1.1.2",
        "@peersyst/react-utils": "^1.0.0",
        "babel-plugin-styled-components": "^2.0.2",
        "i18n-js": "^3.8.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-query": "^3.34.12",
        "react-router-dom": "6.1.1",
        "react-scripts": "^5.0.0",
        "recoil": "^0.5.2",
        "styled-components": "^5.3.3",
        "stylelint-config-recommended": "^6.0.0",
        "web-vitals": "^1.0.1"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.16.0",
        "@babel/plugin-proposal-decorators": "^7.16.0",
        "@babel/plugin-transform-runtime": "7.16.5",
        "@babel/preset-env": "^7.15.6",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "7.16.5",
        "@cypress/code-coverage": "3.9.11",
        "@cypress/instrument-cra": "^1.4.0",
        "@testing-library/cypress": "8.0.1",
        "@testing-library/dom": "8.11.1",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.1.0",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/i18n-js": "^3.8.0",
        "@types/jest": "^26.0.15",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-router-dom": "^5.3.2",
        "@types/styled-components": "^5.1.20",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "babel-jest": "^26.6.3",
        "craco-alias": "^3.0.1",
        "customize-cra": "^1.0.0",
        "customize-cra-react-refresh": "^1.1.0",
        "cypress": "9.1.1",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-cypress": "^2.12.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.23.2",
        "eslint-plugin-react-hooks": "^4.3.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "26.6.0",
        "lint-staged": "^11.0.0",
        "openapi-typescript": "^5.1.0",
        "openapi-typescript-codegen": "^0.13.0",
        "prettier": "2.5.1",
        "start-server-and-test": "1.14.0",
        "stylelint": "^14.3.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.10.0",
        "ts-jest": "^26.5.6",
        "typescript": "^4.5.5"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "lint-staged": {
        "*.{json,js,jsx,ts,tsx,css,scss,md}": "prettier --config .prettierrc --write",
        "*.{ts,tsx,js,jsx,json}": "eslint --cache --fix --max-warnings 0"
    }
}
