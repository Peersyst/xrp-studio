{
    "name": "web-base-project",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "prebuild": "rimraf build",
        "start": "npm run generate && craco start",
        "build": "craco build",
        "eject": "craco eject",
        "generate": "npm run generate:openapi && npm run generate:icons && npm run generate:images",
        "generate:icons": "node ./src/script/iconGenerator.js ./src/asset/icon/ ./src/module/common/icons/ && prettier --write ./src/module/common/icons/",
        "generate:images": "node ./src/script/imagesGenerator.js ./src/asset/image/ && prettier --write ./src/asset/image/",
        "generate:openapi": "openapi -i ../backend/openapi-spec.json -o src/module/api/service --exportSchemas=true --useUnionTypes",
        "test": "jest --coverage",
        "test:unit": "jest --coverage"
    },
    "dependencies": {
        "@craco/craco": "^6.1.2",
        "@peersyst/react-components": "^2.19.4",
        "@peersyst/react-hooks": "^1.2.5",
