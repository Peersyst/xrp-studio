{
    "name": "base-project",
    "private": true,
    "scripts": {
        "start": "yarn docker:start:dev && lerna run start --stream",
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build --stream",
        "clean": "lerna clean",
        "lint": "eslint . --ext .ts,.json --max-warnings=0",
        "lint:fix": "prettier --config .prettierrc '**/*.{json,ts}' --write && eslint . --ext .ts,.json --fix",
        "docker:stop": "yarn docker:stop:dev && yarn docker:stop:prod && yarn docker:stop:e2e",
        "docker:start:dev": "docker-compose up -d",
        "docker:stop:dev": "docker-compose --env-file .env down",
        "docker:start:prod": "docker-compose -f ./docker/config/docker-compose-prod.yml --env-file .env up -d",
        "docker:stop:prod": "docker-compose -f ./docker/config/docker-compose-prod.yml --env-file .env down",
        "docker:start:e2e": "docker-compose -f ./docker/config/docker-compose-e2e.yml --env-file .env up -d && sleep 3",
        "docker:stop:e2e": "docker-compose -f ./docker/config/docker-compose-e2e.yml --env-file .env down",
        "docker:clean": "yarn docker:stop && rimraf ./docker/data",
        "test:e2e": "server-test docker:start:e2e 8182 test:e2e:run",
        "test:e2e:install": "cypress install",
        "test:e2e:run": "cypress run",
        "test:e2e:open": "cypress open"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.30.4",
        "@typescript-eslint/parser": "^5.30.4",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-prettier": "4.2.1",
        "lerna": "5.1.6",
        "prettier": "2.7.1",
        "typescript": "^4.5.5",
        "rimraf": "^3.0.2"
    },
    "dependencies": {
        "cypress": "10.3.0",
        "start-server-and-test": "^1.14.0",
        "@cypress/code-coverage": "3.10.0",
        "cypress-react-selector": "^2.3.20"
    }
}
